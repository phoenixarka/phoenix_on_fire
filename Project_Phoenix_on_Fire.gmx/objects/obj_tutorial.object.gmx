        if(instance_exists(obj_enemy_basic0))
        {
            if(obj_enemy_basic0.y +32 &gt; view_yview)
            {event_begin = 0;}
        }
    }
    else if(enemy_test == 1)
    {
        if(view_yview &lt;= 635)
        {obj_controler.view_speed = 0;}
        
        if(!instance_exists(obj_enemy_basic0))
        {
            enemy_test = 0;
            event_begin = 0;
            story_counter += 1;
        }
    }
    
    //warning
    if(warning_test == 0)
    {
        if(instance_exists(obj_warning))
        {warning_test = 1;}
    }
    if(warning_test == 1)
    {
         if(!instance_exists(obj_warning))
        {
            story_counter += 1;
            warning_test = 0;
            event_begin = 0;
        }
    }
    
    //boss test
    if(boss_test == 0)
    {
        if(instance_exists(obj_enemy_basic2))
        {
            if(obj_enemy_basic2.EBcannon == 1)
            {
                event_begin = 0;
                boss_test = 1;
            }
        }
    }
    else if(boss_test == 1)
    {obj_enemy_basic2.EB_delay = 60;}
    else if(boss_test == 2)
    {
        if(!instance_exists(obj_enemy_basic2))
        {
            event_begin = 0;
            story_counter += 1;
            boss_test = 0;
        }
    }
}
