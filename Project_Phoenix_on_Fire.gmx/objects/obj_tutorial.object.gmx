        <arguments>
          <argument>
            <kind>1</kind>
            <string>{
    if(!instance_exists(obj_fadein))
    {
        if(begin_cg1 == 0)
        {
            begin_cg1 = 1;
            open_window = 1;
        }
    
        if(!instance_exists(obj_night))
        {
            if(begin_cg1 == 1)
            {
                //Window open
                if(open_window == 1)
                {
                    if(window_oper_counter &lt; 30)
                    {
                        draw_convs_y1 = convs_y + (((convs_y1 - convs_y)/30) * window_oper_counter);
                        window_oper_counter += 1;
                    }
                    else
                    {
                        open_window = 0;
                        display_convs = 1;
                        window_oper_counter = 0;
                    }
                }
                
                //Window close
                if(close_window == 1)
                {
                    if(window_oper_counter &lt; 30)
                    {
                        draw_convs_y1 = convs_y1 - (((convs_y1 - convs_y)/30) * window_oper_counter);
                        window_oper_counter += 1;
                    }
                    else
                    {
                        close_window = 0;
                        window_oper_counter = 0;
                        open_window = 1;
                        
                        //continous part
                        if(story_counter &lt; 3)
                        {story_counter += 1;}
                        else if(story_counter &gt;= 4 &amp;&amp; story_counter &lt; 5)
                        {story_counter += 1;}
                        else if(story_counter &gt;= 6 &amp;&amp; story_counter &lt;= 7)
                        {story_counter += 1;}
                        else if(story_counter &gt; 8 &amp;&amp; story_counter &lt; 10)
                        {story_counter += 1;}
                        else if(story_counter &gt; 11 &amp;&amp; story_counter &lt; 12)
                        {story_counter += 1;}
                        else if(story_counter &gt;= 13 &amp;&amp; story_counter &lt; 14)
                        {story_counter += 1;}
                        
                        //speical part
                        if(story_counter == 3)
                        {
                            movement_test = 1;
                            event_begin = 1;
                        }
                        if(story_counter == 5)
                        {
                            wp_upgrade_test = 1;
                            event_begin = 1;
                        }
                        if(story_counter == 7)
                        {
                            charge_test = 1;
                            event_begin = 1;
                        }
                        
                        if(story_counter == 10)
                        {
                            if(bomb_test == 0)
                            {bomb_test = 1;}
                            event_begin = 1;
                        }
                        
                        if(story_counter == 11)
                        {
                            enemy_test = 1;
                            event_begin = 1;
                        }
                        
                        if(story_counter == 12)
                        {
                            instance_create(view_xview+view_wview/2,view_yview + (view_hview * 0.3),obj_warning);
                            event_begin = 1;
                        }
                        
                        if(story_counter == 13)
                        {event_begin = 1;}
                        
                        if(story_counter == 14)
                        {
                            event_begin = 1;
                            if(boss_test == 1)
                            {boss_test = 2;}
                        }
                    }
                }
                
                //left and right convs
                if(convs_words[story_counter,2] == 1)
                {draw_char_x = char_x;}
                else
                {draw_char_x = char_x1;}
            }
        }
    }
}
